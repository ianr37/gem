[
    {
        "name": "wf1",
        "firstStep": "step1",
        "parameters": [
            {"name": "p1", "storage": "string"},
            {"name": "p2", "storage": "number"},
            {"name": "p3", "storage": "boolean"},
            {"name": "p4", "storage": "object"}
        ],
        "tasks": [
            {"name": "t1", "builder": "RunTest", "fields": ["p1", "p3"]},
            {"name": "t2", "builder": "PauseTest", "fields": ["p2", "p4"]}
        ],
        "steps": [
            {"name": "step1", "task": "t1", "jumps": [{"state": "ok", "target": "step2"}]},
            {"name": "step2", "task": "t2", "jumps": [{"state": "finished", "target": null}]}
        ]
    },

    {
        "name": "run-test",
        "firstStep": "step1",
        "parameters": [ ],
        "tasks": [
            {"name": "run", "builder": "RunTest", "fields": [ ]}
        ],
        "steps": [
            {"name": "step1", "task": "run", "jumps": [{"state": "finished", "target": null}]}
        ]
    },

    {
        "name": "pause-test",
        "firstStep": "step1",
        "parameters": [ ],
        "tasks": [
            {"name": "pause", "builder": "PauseTest", "fields": [ ]},
            {"name": "run", "builder": "RunTest", "fields": [ ]}
        ],
        "steps": [
            {"name": "step1", "task": "pause", "jumps": [{"state": "ok", "target": "step2"}]},
            {"name": "step2", "task": "run", "jumps": [{"state": "finished", "target": null}]}
        ]
    },

    {"home":
        {
            "parameters": [],
            "tasks": [
                {"taskName": "Home", "taskClass": "BrowserDisplayTask", "fields": []}
            ],
            "fsm": [
                {"step": "start", "task": "Home", "nextMap": {"all": "start"}}
            ]
        }
    },

    {"login":
        {
            "parameters": [
                {"name": "userName", "storageType": "string"},
                {"name": "passPhrase", "storageType": "string"},
                {"name": "accessToken", "storageType": "string"},
                {"name": "refreshToken", "storageType": "string"},
                {"name": "userProfile", "storageType": "UserProfile"}
            ],
            "tasks": [
                {"taskName": "Enter User ID", "taskClass": "BrowserDisplayTask",
                    "fields": [
                        {"parameter": "userName", "label": "User Name", "displayType": "text"},
                        {"parameter": "passPhrase", "label": "Pass Phrase", "displayType": "password"}
                    ]
                },
                {"name": "Request Tokens", "taskClass": "BrowserTxRequestTask", "url": "/api/login",
                    "parameters": [
                        {"parameter": "userName", "alias": "userName"},
                        {"parameter": "passPhrase", "alias": "passPhrase"}
                    ]
                },
                {"name": "Receive Tokens", "taskClass": "BrowserRxResponsetask",
                    "parameters": [
                        {"parameter": "accessToken", "alias": "accessToken"},
                        {"parameter": "refreshToken", "alias": "refreshToken"},
                        {"parameter": "userProfile", "alias": "userProfile"}
                    ]
                },
                {"name": "Store Tokens and Profile", "taskClass": "BrowserStoreTask",
                    "parameters": [
                        {"parameter": "accessToken", "alias": "accessToken"},
                        {"parameter": "refreshToken", "alias": "refreshToken"},
                        {"parameter": "userProfile", "alias": "userProfile"}
                    ]
                }
            ],
            "fsm": [
                {"step": "$start", "task": "Enter User ID", "nextMap": {"ok": "tx"}},
                {"step": "tx", "task": "Request Tokens", "nextMap": {"ok": "rx"}},
                {"step": "rx", "task": "Receive Tokens", "nextMap": {"ok": "store"}},
                {"step": "store", "task": "Store Tokens and Profile", "nextMap": {"ok": "$done"}}
            ]
        }
    }
]
